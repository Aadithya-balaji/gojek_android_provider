<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_img_upload"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_80sdp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_document_upload_option">
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:srcCompat="@drawable/provider_image_upload"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ll_img_upload"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_upload_img"
        android:layout_width="match_parent"
        android:text="@string/label_upload_img"
        android:textColor="@color/doc_font_service_enabled"
        android:fontFamily="@font/avenirltstd_medium"
        android:textSize="@dimen/_11sdp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_9sdp"
        android:text="@string/label_upload_img_types"/>
    </LinearLayout>


</RelativeLayout>