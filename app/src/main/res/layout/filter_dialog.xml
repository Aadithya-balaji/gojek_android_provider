<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="orderfragmentviewmodel"
            type="com.xjek.provider.views.order.OrderFragmentViewModel" />

        <variable
            name="filterServiceListAdapter"
            type="com.xjek.provider.views.adapters.FilterServiceListAdapter" />

    </data>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_background_color"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp">

                <TextView
                    style="@style/MediumText.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_by" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reset"
                    style="@style/MediumText"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorAccent"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/servicelist_frghome_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adapter="@{filterServiceListAdapter}"
                android:padding="@dimen/_8sdp"
                tools:itemCount="3"
                tools:listitem="@layout/filterservice_rowitem"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3" />

            <Button
                android:id="@+id/apply_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_17sdp"
                android:background="@drawable/custom_full_round_corner"
                android:backgroundTint="@color/colorPrimary"
                android:padding="@dimen/_5sdp"
                android:text="@string/apply"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp"
                tools:targetApi="lollipop" />

        </LinearLayout>

</layout>