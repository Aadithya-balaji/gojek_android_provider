<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="myaccountfragmentviewmodel"
            type="com.appoets.gojek.provider.views.account.AccountViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background_color"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_white"
            app:title="@string/myaccount"
            tools:targetApi="honeycomb" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="2">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_165sdp"
                app:cardCornerRadius="@dimen/_8sdp">
                <!--profile relativelayout-->
                <RelativeLayout
                    android:id="@+id/profile_myaccount_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="@{() -> myaccountfragmentviewmodel.openProfilePage()}"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/profile_myaccount_imgview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_circle"
                        android:padding="@dimen/_15sdp"
                        app:srcCompat="@drawable/ic_profile" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_myaccount_imgview"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/profile"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_165sdp"
                app:cardCornerRadius="@dimen/_8sdp">

                <RelativeLayout
                    android:id="@+id/inviteref_myaccount_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="@{() -> myaccountfragmentviewmodel.openInvitePage()}"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/inviteref_myaccount_imgview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/custom_circle"
                        android:contentDescription="@string/invite"
                        android:padding="@dimen/_15sdp"
                        android:tint="@color/colorWhite"
                        app:srcCompat="@drawable/ic_gift_card" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/inviteref_myaccount_imgview"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/invite_refferals"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_165sdp"
                app:cardCornerRadius="@dimen/_8sdp">
                <!--profile relativelayout-->
                <RelativeLayout
                    android:id="@+id/payment_myaccount_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="@{() -> myaccountfragmentviewmodel.openPaymentPage()}"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/payment_myaccount_imgview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_circle"
                        android:padding="@dimen/_15sdp"
                        android:tint="@color/colorWhite"
                        app:srcCompat="@drawable/ic_card" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/payment_myaccount_imgview"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/payment"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_165sdp"
                app:cardCornerRadius="@dimen/_8sdp">
                <!--transaction relativelayout-->
                <RelativeLayout
                    android:id="@+id/transaction_myaccount_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="@{() -> myaccountfragmentviewmodel.opegotoTransacationPagenTranscationPage()}"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/transaction_myaccount_imgview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/custom_circle"
                        android:contentDescription="@string/invite"
                        android:padding="@dimen/_15sdp"
                        android:tint="@color/colorWhite"
                        app:srcCompat="@drawable/ic_transaction" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/transaction_myaccount_imgview"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/transaction"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_165sdp"
                app:cardCornerRadius="@dimen/_8sdp">
                <!--profile relativelayout-->
                <RelativeLayout
                    android:id="@+id/privacypolicy_myaccount_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="@{() -> myaccountfragmentviewmodel.openPrivacyPage()}"

                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/privacypolicy_myaccount_imgview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_circle"
                        android:padding="@dimen/_15sdp"
                        android:tint="@color/colorWhite"
                        app:srcCompat="@drawable/ic_privacy_policy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/privacypolicy_myaccount_imgview"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/privacy_plicy"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_165sdp"
                app:cardCornerRadius="@dimen/_8sdp">
                <!--privacy policy relativelayout-->
                <RelativeLayout
                    android:id="@+id/support_myaccount_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="@{() -> myaccountfragmentviewmodel.openSupportPage()}"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/support_myaccount_imgview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/custom_circle"
                        android:padding="@dimen/_15sdp"
                        android:tint="@color/colorWhite"
                        app:srcCompat="@drawable/ic_support" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/support_myaccount_imgview"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/support"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>