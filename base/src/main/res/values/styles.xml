        &lt;!&ndash; Floating label appearance here &ndash;&gt;
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/avenirltstd_medium</item>
    </style>

    <style name="AppTheme.TextErrorAppearance" parent="TextAppearance.Design.Error">
        &lt;!&ndash; Error message appearance here &ndash;&gt;
