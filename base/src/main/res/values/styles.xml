<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--App Module-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBasePrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/app_background_color</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="background">@android:color/white</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/avenirltstd_medium</item>
    </style>

    <style name="selectedTabButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorBasePrimary</item>
        <item name="android:background">@drawable/custom_roundcorner_selectedorder</item>
    </style>

    <style name="unSelectedTabButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/custom_roundcorner_unselectedorder</item>
    </style>


    <style name="Theme.ImageCropper" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorBasePrimary</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/xuber_white</item>
        <item name="colorControlActivated">@color/colorBasePrimary</item>
    </style>


    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">@color/colorBasePrimary</item>
    </style>

    <style name="TabLayoutStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/avenirltstd_medium</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <!--Toolbar Theme-->
    <style name="Theme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:fontFamily">@font/avenir_lt_std_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--TextInputLayout Theme-->
    <style name="Theme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/colorBoxBackground</item>
        <item name="boxStrokeColor">@color/colorBoxStroke</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:fontFamily">@font/avenir_lt_std_roman</item>
    </style>

    <style name="Theme.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:fontFamily">@font/avenir_lt_std_roman</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">@color/colorCounterText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--TextView Theme-->

    <style name="BoldText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/avenirltstd_bold</item>
    </style>

    <style name="Theme.TextView.Normal" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/avenir_lt_std_roman</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--TextView Theme-->
    <style name="Theme.TextView.Medium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/avenir_lt_std_roman</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--TextView Theme-->
    <style name="Theme.TextView.Small" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/avenir_lt_std_roman</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--TextView Theme-->
    <style name="Theme.TextView.Normal.Gray" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/avenir_lt_std_roman</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--TextView Theme-->
    <style name="Theme.TextView.Medium.Gray" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/avenir_lt_std_roman</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--TextView Theme-->
    <style name="Theme.TextView.Small.Gray" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/avenir_lt_std_roman</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Edit_Text_Outlined_Theme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/et_stroke_color</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/boxCornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/boxCornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/boxCornerRadius</item>
        <item name="boxCornerRadiusTopStart">@dimen/boxCornerRadius</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHintText</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutHelperText</item>
        <item name="errorTextAppearance">@style/TextInputLayoutErrorText</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow</item>
        <item name="android:fontFamily">@font/avenirltstd_medium</item>
        <item name="android:editTextStyle">@style/TextInputEditText.OutlinedBox.CustomFont</item>
    </style>

    <style name="TextInputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/avenirltstd_medium</item>    </style>

    <style name="TextInputLayoutHelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/avenirltstd_medium</item>
    </style>

    <style name="TextInputEditText.OutlinedBox.CustomFont" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/avenirltstd_medium</item>
    </style>


    <style name="TextInputLayoutErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/avenirltstd_medium</item>    </style>

