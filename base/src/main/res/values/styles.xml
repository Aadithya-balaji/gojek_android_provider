<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageRatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_selector</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>

    <style name="AlertDialogTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBasePrimary</item>
        <item name="colorPrimaryDark">@color/colorBasePrimary</item>
        <item name="colorAccent">@color/colorBasePrimary</item>

    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="background">@android:color/white</item>
        <item name="titleTextColor">@android:color/black</item>
    </style>

    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

</resources>