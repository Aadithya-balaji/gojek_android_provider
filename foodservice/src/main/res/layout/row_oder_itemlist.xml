<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp">

        <TextView
            android:id="@+id/order_item_name"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/order_item_cost_tv"
            android:fontFamily="@font/avenirltstd_medium"
            android:textColor="@color/black"
            tools:text="@string/dummy_item_name" />

        <TextView
            android:id="@+id/addon_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_item_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:layout_toStartOf="@+id/order_item_cost_tv"
            android:fontFamily="@font/avenirltstd_medium"
            tools:text="@string/dummy_item_name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_item_cost_tv"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/avenirltstd_medium"
            android:text="@string/dummy_item_total"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/addon_item_cost_tv"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_item_cost_tv"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/avenirltstd_medium"
            android:text="@string/dummy_item_total"
            android:visibility="gone" />

    </RelativeLayout>
</layout>
