<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp">

        <TextView
            android:id="@+id/order_item_name"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/avenirltstd_medium"
            android:layout_toStartOf="@+id/order_item_cost_tv"
            android:padding="@dimen/_2sdp"
            android:text="@string/dummy_item_name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/addon_item_name"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirltstd_medium"
            android:layout_below="@+id/order_item_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toStartOf="@+id/order_item_cost_tv"
            android:padding="@dimen/_2sdp"
            android:text="@string/dummy_item_name" />

        <TextView
            android:id="@+id/order_item_cost_tv"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/avenirltstd_medium"
            android:padding="@dimen/_2sdp"
            android:text="@string/dummy_item_total"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/addon_item_cost_tv"
            style="@style/SmallText"
            android:fontFamily="@font/avenirltstd_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_item_cost_tv"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_2sdp"
            android:text="@string/dummy_item_total" />

    </RelativeLayout>
</layout>
