<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Bold">
        <item name="fontFamily">@font/avenirltstd_medium</item>
    </style>

    <style name="Plain">
        <item name="fontFamily">@font/avenirltstd_roman</item>
    </style>

    <style name="MediumText.Plain" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="MediumText.Bold" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="SmallText.Plain" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="SmallText.Bold" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="VerySmallText.Plain" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="VerySmallText.Bold" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="FoodieRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/colorTaxiYellow</item>
    </style>

</resources>
