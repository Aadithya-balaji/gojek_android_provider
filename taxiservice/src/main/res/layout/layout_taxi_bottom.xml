<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bottomsheetmodel"
            type="com.xjek.taxiservice.views.bottomsheets.RideStatusViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="100dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/tv_sos"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/bg_black_circle"
                android:gravity="center"
                android:text="@string/taxi_sos"
                android:textColor="@color/taxi_bg_yellow"
                android:textSize="@dimen/_10sdp" />

            <!--<ImageButton-->
            <!--android:id="@+id/iv_unselected_map_bin"-->
            <!--android:layout_width="@dimen/_50sdp"-->
            <!--android:layout_height="@dimen/_50sdp"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:background="@drawable/bg_black_circle"-->
            <!--android:contentDescription="@string/app_name"-->
            <!--android:src="@drawable/icons8-more-filled-48"-->
            <!--android:tint="@color/taxi_bg_yellow" />-->

            <!--<com.google.android.material.floatingactionbutton.FloatingActionButton-->
            <!--android:id="@+id/fab_bar"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--app:backgroundTint="#1E355E" />-->

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grey_left_full_square">

                <LinearLayout
                    android:id="@+id/ll_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_cancel"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/flower"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/placeholder_string"
                            android:textColor="@color/taxi_bg_yellow" />

                        <RatingBar
                            android:id="@+id/rate"
                            style="@android:style/Widget.Holo.Light.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:padding="5dp"
                            android:stepSize="1" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_user"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_pickup_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/ibNavigation"
                        android:fontFamily="@font/avenirltstd_medium"
                        android:padding="3dp"
                        android:text="@string/taxi_pickup_location"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/tv_user_address_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_pickup_location"
                        android:layout_toStartOf="@id/ibNavigation"
                        android:fontFamily="@font/avenirltstd_medium"
                        android:padding="3dp"
                        android:text="@string/placeholder_string"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/tv_user_address_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_user_address_one"
                        android:layout_toStartOf="@id/ibNavigation"
                        android:padding="3dp"
                        android:text="@string/placeholder_string"
                        android:textColor="@color/grey" />

                    <ImageButton
                        android:id="@+id/ibNavigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:contentDescription="@string/app_name"
                        android:elevation="5dp"
                        android:padding="@dimen/_15sdp"
                        app:srcCompat="@drawable/ic_location_arrow" />

                </RelativeLayout>

            </RelativeLayout>

            <include
                layout="@layout/layout_status_indicators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:id="@+id/ll_button_approve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@color/taxi_bg_yellow"
                    android:fontFamily="@font/avenirltstd_medium"
                    android:onClick="@{() -> bottomsheetmodel.closeDialog()}"
                    android:text="@string/taxi_pickup_cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_approve"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight=".5"
                    android:background="@color/taxi_bg_yellow"
                    android:fontFamily="@fo"
                    android:onClick="@{() -> bottomsheetmodel.openOTPDialogFrag()}"
                    android:text="@string/taxi_pickup_approve"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/tv_arrived"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/bg_yellow_curve"
                android:fontFamily="@font/avenirltstd_medium"
                android:onClick="@{() -> bottomsheetmodel.gotoInvoicePage()}"
                android:text="@string/taxi_tab_ariived"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</layout>